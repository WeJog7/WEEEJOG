<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  
  
  <welcome-file-list>
    <welcome-file>connexion</welcome-file>
  </welcome-file-list>
  
<filter>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>hei.devweb.wejog.filter.EncodingFilter</filter-class>
	</filter>
	<filter>
		<filter-name>MessageFilter</filter-name>
		<filter-class>hei.devweb.wejog.filter.MessageFilter</filter-class>
	</filter>
	<filter>
		<filter-name>AuthentificationFilter</filter-name>
		<filter-class>hei.devweb.wejog.filter.AuthentificationFilter1</filter-class>
	</filter>
	<filter>
		<filter-name>AdminFilter</filter-name>
		<filter-class>hei.devweb.wejog.filter.AdminFilter</filter-class>
	</filter>


	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>MessageFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AuthentificationFilter</filter-name>
		<url-pattern>/home</url-pattern>
	</filter-mapping>
	


  
</web-app>